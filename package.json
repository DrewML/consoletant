{
  "name": "consoletant",
  "version": "0.1.0",
  "description": "A better \"console\" for the Chrome Developer Tools",
  "main": "index.js",
  "scripts": {
    "bundle": "browserify extension/frontend/panel.js -o dist/frontend/panel.js -t babelify",
    "clean": "rm -rf dist && mkdir -p dist/frontend",
    "copy": "cp -r extension/* dist",
    "styles": "cat extension/frontend/components/*/*.css > dist/frontend/app.css",
    "build": "npm-run-all clean --parallel copy bundle styles",
    "test": "ava"
  },
  "author": "Andrew Levine",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "npm-run-all": "^1.7.0"
  },
  "ava": {
    "source": [
      "extension/**/*.js"
    ],
    "files": [
      "tests/*.spec.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "react": "^15.0.1",
    "react-dom": "^15.0.1"
  }
}
